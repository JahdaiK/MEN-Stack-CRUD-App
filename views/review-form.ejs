<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav><%- include('./partials/nav.ejs') %></nav>

    <section>
      <form method="POST" action="/reviews/create/<%book._id%>">
        <div class="input-box">
          <label for="reviewTitle">Title:</label>
          <input
            type="text"
            placeholder="Title"
            id="reviewTitle"
            name="reviewTitle"
            required
          />
        </div>
        <br />

        <div class="number">
          <label for="rating">Rating:</label>
          <input type="number" id="rating" name="rating" required />
        </div>
        <br />

        <div class="text-area">
          <label for="content">Review:</label>
          <textarea
            type="text"
            id="content"
            placeholder="Review"
            name="content"
            required
          ></textarea>
        </div>

        <br />

        <div class="input-box">
          <label for="reviewerName">Name:</label>
          <input
            type="reviewerName"
            placeholder="Name"
            id="reviewerName"
            name="reviewerName"
            required
          />
        </div>
        <br />
      </form>
    </section>
    <footer><%- include('./partials/footer.ejs') %></footer>
  </body>
</html>
